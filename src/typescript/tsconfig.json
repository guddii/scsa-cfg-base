{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@scsa/*": [
        "node_modules/@scsa/*"
      ]
    },
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "src/types"
    ],
    "types": [
      "node"
    ]
  }
}
